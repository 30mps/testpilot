{
  "title": "Idea Town Addon",
  "name": "idea-town-addon",
  "version": "0.0.1",
  "private": true,
  "description": "The addon where ideas come to idea",
  "repository": "mozilla/idea-town-addon",
  "main": "index.js",
  "author": "Mozilla (https://mozilla.org/)",
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "scripts": {
    "start": "st -nc .",
    "lint": "eslint .",
    "package": "jpm xpi && mv @idea-town-addon-$npm_package_version.xpi dist/idea-town-addon-$npm_package_version.xpi"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "idea-town": "^0.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.0",
    "eslint": "^1.2.1",
    "eslint-config-airbnb": "^0.0.8",
    "eslint-config-idea-town": "^1.2.0",
    "jpm": "^1.0.1"
  },
  "preferences": [
    {
      "name": "BASE_URL",
      "title": "Ideatown protocall",
      "description": "protocall",
      "type": "string",
      "value": "http://ideatown.dev:8000"
    },
    {
      "name": "BADGE_COLOR",
      "title": "Ideatown Badge Color",
      "description": "Color of the ideatown badge hex",
      "type": "string",
      "value": "#00AAAA"
    },
    {
      "name": "ALLOWED_ORIGINS",
      "title": "Allowed origins for addon",
      "description": "Allowed origins for addon",
      "type": "string",
      "value": "http://ideatown.dev:8000/*,https://ideatown.firefox.com/*"
    },
    {
      "name": "IDEATOWN_PREFIX",
      "title": "Ideatown namespace",
      "description": "Ideatown namespace for metric events",
      "type": "string",
      "value": "ideatown.addon.MAIN."
    }
  ]
}
